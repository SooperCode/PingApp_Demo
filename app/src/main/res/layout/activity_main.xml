<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="7.0">

            <TextView
                android:id="@+id/promptDisplay"
                style="@style/defaultStyle"
                android:text="@string/promptDisplay"/>

            <EditText
                android:id="@+id/usersHost"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:inputType="textUri"
                android:textColor="#00ffff"
                android:text="@string/textfield_initialhost"
                android:textSize="20sp"
                android:imeOptions="actionDone">
                <!--   <requestFocus /> -->
                <!-- android:layout_marginTop="10dp"
                 android:hint="@string/textfield_hint" -->
            </EditText>

        </LinearLayout>

        <ImageButton
            android:id="@+id/buttonErase"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/erase_button"
            android:background="@android:color/transparent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/buttonPingNow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="21sp"
            android:text="@string/buttonPingNow"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_states"/>

        <Button
            android:id="@+id/buttonAdd"
            android:text="@string/buttonAdd"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_states"/>

    </LinearLayout>

  <!--  <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black"/> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="17dp">

        <ImageView
            android:id="@+id/imgWatchlistOn"
            android:contentDescription="@string/watchlight_content"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/off_30x30"
            android:layout_weight="1.0"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:textSize="20sp"
            android:text="@string/watchlist_title"
            android:textColor="#00ccff"
            android:textStyle="bold"
            android:layout_weight="6.0"/>

        <ProgressBar
            android:id="@+id/progressWheel"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1.5"
            android:visibility="invisible"
            android:paddingRight="5dp"/>

        <ImageButton
            android:id="@+id/buttonRefresh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/refresh_button"
            android:contentDescription="Refreshes the Watchlist"
            android:background="@android:color/transparent"
            android:layout_weight="1.3" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:paddingBottom="7dp"/>

    <ListView
        android:id="@+id/listview_pingList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>

