    <!-- HELP ACTIVITY -->
    <string name="activity_help_title">PingApp Help</string>
    <string name="page0"><![CDATA[
        <HTML><BODY><b><font color="#00ddff">PING NOW OR ADD TO WATCHLIST</font></b>
        <p><font color="#00ddff">*</font> Ping your host now to receive the server\'s HTTP response,
        or monitor its status by adding it to the watchlist.</p>
        <p><font color="#00ddff">*</font> The watchlist is meant for monitoring the status of hosts
        that are currently unavailable.</p> </BODY></HTML>]]></string>

    <string name="page1"><![CDATA[
        <HTML><BODY><b><font color="#00ddff">MONITOR YOUR HOSTS</font></b>
        <p><font color="#00ddff">*</font> Get notified as soon as a server responds,
        by turning on Background Pinging in Settings. PingApp will then check your hosts for
        availability in regular intervals and send you a notification when a host has responded.</p>
        <p><font color="#00ddff">*</font> Possible intervals range from 15 minutes to 24 hours.</p> </BODY><HTML>]]> </string>

    <string name="page2"><![CDATA[
        <HTML><BODY><b><font color="#00ddff">THE WATCHLIST</font></b>
        <p><font color="#00ddff">*</font> The green light on top of the watchlist indicates that Background
        Pinging is currently active.</p>
        <p><font color="#00ddff">*</font> If you\'re feeling nerdy, go to Settings and switch to Nerd View...</p>
        <p><font color="#00ddff">*</font> Tap on a host in the list to refresh it, or hold down to delete it.</p> </BODY></HTML>]]></string>


